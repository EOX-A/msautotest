#
# Tests label printing and GIF output (the default)
#
# REQUIRES: OUTPUT=GIF
# RUN_PARMS: helloworld.gif

MAP
       NAME HELLO
       STATUS ON
       EXTENT 59 10 60 11
       SIZE 400 300
       IMAGECOLOR 200 255 255
       DEBUG 5
       CONFIG "MS_ERRORFILE" "log/ms_error.txt"
       PROJECTION
          "init=epsg:26915"
       END
       WEB
        METADATA
            "wfs_title"          "WFS Demo Server for MapServer" ## REQUIRED
            "wfs_onlineresource" "http://demo.mapserver.org/cgi-bin/wfs?" ## Recommended
            "wfs_srs"            "EPSG:4326 EPSG:4269 EPSG:3978 EPSG:3857" ## Recommended
            "wfs_abstract"       "This text describes my WFS service." ## Recommended
            "wfs_enable_request" "*"  # necessary
            "gml_include_items" "all"
        END
       END
       LAYER
               DEBUG 5
               DUMP TRUE
               NAME "credits"
	       METADATA
      "wfs_title"         "World continents" ##REQUIRED
      "wfs_srs"           "EPSG:4326" ## REQUIRED
      "gml_include_items" "all" ## Optional (serves all attributes for layer)
      "gml_featureid"     "ID" ## REQUIRED
      "wfs_enable_request" "*"
    END
               STATUS DEFAULT
               TRANSFORM FALSE
               TYPE POINT
               PROJECTION
                  "init=epsg:26915"
               END
               FEATURE
                       POINTS
                               20 25
                       END
                       TEXT 'Hello world'
               END
               TEMPLATE "template/dummy.tmpl"
               CLASS
                       LABEL
                               TYPE BITMAP
                               COLOR 0 0 0
                       END
               END
       END
END
